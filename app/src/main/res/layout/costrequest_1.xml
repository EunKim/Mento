    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/where"
            android:id="@+id/txtwhere"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/accent_material_light" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtwhere"
            android:textColor="@color/accent_material_light"
            android:hint="@string/default_place"
            android:textColorHighlight="@color/accent_material_light"
            android:textColorHint="@color/accent_material_light"
            android:layout_below="@+id/txtwhere"
            android:layout_alignLeft="@+id/txtwhere"
            android:layout_alignStart="@+id/txtwhere" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/how_much"
            android:id="@+id/txthowmuch"
            android:layout_below="@+id/edtwhere"
            android:layout_alignLeft="@+id/txtwhere"
            android:layout_alignStart="@+id/txtwhere"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/edthowmuch"
            android:text="0"
            android:layout_below="@+id/txthowmuch"
            android:layout_alignStart="@+id/txtwhere"
            android:textAlignment="textEnd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/when"
            android:id="@+id/txtwhen"
            android:layout_below="@+id/edthowmuch"
            android:layout_alignLeft="@+id/edthowmuch"
            android:layout_alignStart="@+id/edthowmuch"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/when"
            android:id="@+id/edtwhen"
            android:layout_below="@+id/txtwhen"
            android:layout_alignLeft="@+id/txtwhen"
            android:layout_alignStart="@+id/txtwhen"
            android:layout_marginTop="5dp"
            android:textSize="25dp" />

