        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/memo"
            android:id="@+id/txtmemo"
            android:layout_below="@+id/edtwhen"
            android:layout_alignLeft="@+id/edtwhen"
            android:layout_alignStart="@+id/edtwhen"
            android:layout_marginTop="5dp"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="적요"
            android:layout_below="@+id/txtmemo"
            android:layout_alignLeft="@+id/txtmemo"
            android:layout_alignStart="@+id/txtmemo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/account"
            android:id="@+id/txtaccount"
            android:layout_below="@+id/editText"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_below="@+id/txtaccount"
            android:layout_alignLeft="@+id/txtaccount"
            android:layout_alignStart="@+id/txtaccount"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/receipt"
            android:id="@+id/txtreceipt"
            android:layout_below="@+id/spinner"
            android:layout_alignLeft="@+id/spinner"
            android:layout_alignStart="@+id/spinner" />

        <ImageView
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:id="@+id/imgreceipt"
            android:layout_below="@+id/txtreceipt"
            android:layout_marginTop="12dp"
            android:src="@android:drawable/ic_menu_report_image"
            android:layout_alignLeft="@+id/txtreceipt"
            android:layout_alignStart="@+id/txtreceipt" />




